{
  "manifest_version": 3,
  "name": "Xplaino AI",
  "version": "0.0.1",
  "description": "English word explanation extension using AI",
  "icons": {
    "16": "public/icons/chrome-extension-logo.png",
    "48": "public/icons/chrome-extension-logo.png",
    "128": "public/icons/chrome-extension-logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/icons/chrome-extension-logo.png",
      "48": "public/icons/chrome-extension-logo.png",
      "128": "public/icons/chrome-extension-logo.png"
    },
    "default_title": "Xplaino AI"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}

